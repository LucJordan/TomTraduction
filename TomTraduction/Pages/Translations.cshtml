@page "/translations"
@model TomTraduction.Pages.TranslationsModel
@using TomTraduction.Models
@{
    ViewData["Title"] = "Gestion des Traductions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Gestion des Traductions</h2>
    <a href="/translations/create" class="btn btn-success">
        <i class="fas fa-plus"></i> Créer une Traduction
    </a>
</div>

<form method="get" class="mb-4">
    <!-- Options globales de recherche -->
    <div class="card mb-3">
        <div class="card-header">
            <h6 class="mb-0">
                <button class="btn btn-link p-0" type="button" data-bs-toggle="collapse" data-bs-target="#searchOptions">
                    <i class="fas fa-cog"></i> Options de recherche avancée
                </button>
            </h6>
        </div>
        <div id="searchOptions" class="collapse">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <label for="GlobalSearchType" class="form-label">Type de recherche</label>
                        <select name="GlobalSearchType" class="form-select form-select-sm">
                            <option value="@((int)SearchType.Contains)" selected="@(Model.Filter.GlobalSearchType == SearchType.Contains)">Contient</option>
                            <option value="@((int)SearchType.BeginsWith)" selected="@(Model.Filter.GlobalSearchType == SearchType.BeginsWith)">Commence par</option>
                            <option value="@((int)SearchType.EndsWith)" selected="@(Model.Filter.GlobalSearchType == SearchType.EndsWith)">Se termine par</option>
                            <option value="@((int)SearchType.Equals)" selected="@(Model.Filter.GlobalSearchType == SearchType.Equals)">Égal exactement</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check mt-4">
                            <input class="form-check-input" type="checkbox" name="GlobalCaseSensitive" value="true" checked="@Model.Filter.GlobalCaseSensitive" />
                            <label class="form-check-label" for="GlobalCaseSensitive">
                                Sensible à la casse
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres de recherche -->
    <div class="row g-3">
        <div class="col-md-2">
            <label for="CodeValue" class="form-label">Code</label>
            <input type="text" class="form-control form-control-sm" name="CodeValue" value="@Model.Filter.Code.Value" placeholder="Rechercher par code..." />
        </div>
        <div class="col-md-2">
            <label for="FrancaisValue" class="form-label">Français</label>
            <input type="text" class="form-control form-control-sm" name="FrancaisValue" value="@Model.Filter.Francais.Value" placeholder="Rechercher en français..." />
        </div>
        <div class="col-md-2">
            <label for="AnglaisValue" class="form-label">Anglais</label>
            <input type="text" class="form-control form-control-sm" name="AnglaisValue" value="@Model.Filter.Anglais.Value" placeholder="Search in English..." />
        </div>
        <div class="col-md-2">
            <label for="PortugaisValue" class="form-label">Portugais</label>
            <input type="text" class="form-control form-control-sm" name="PortugaisValue" value="@Model.Filter.Portugais.Value" placeholder="Pesquisar em português..." />
        </div>
        <div class="col-md-2">
            <label for="FichierValue" class="form-label">Fichier</label>
            <input type="text" class="form-control form-control-sm" name="FichierValue" value="@Model.Filter.Fichier.Value" placeholder="Rechercher par fichier..." />
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary btn-sm me-2">
                <i class="fas fa-search"></i> Filtrer
            </button>
            <a href="/translations" class="btn btn-secondary btn-sm">
                <i class="fas fa-undo"></i> Reset
            </a>
        </div>
    </div>
</form>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <span class="badge bg-info">@Model.Translations.Count traduction(s) trouvée(s)</span>
    @if (Model.Translations.Any())
    {
        <small class="text-muted">
            Les traductions marquées [EN] ou [PT] sont générées automatiquement et peuvent nécessiter une révision.
        </small>
    }
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Code</th>
                <th>Français</th>
                <th>Anglais</th>
                <th>Portugais</th>
                <th>Fichier</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Translations.Any())
            {
                @foreach (var translation in Model.Translations)
                {
                    <tr>
                        <td><code>@translation.Code</code></td>
                        <td>@translation.Francais</td>
                        <td>
                            @if (translation.Anglais.StartsWith("[EN]"))
                            {
                                <span class="text-warning" title="Traduction générée automatiquement">@translation.Anglais</span>
                            }
                            else
                            {
                                @translation.Anglais
                            }
                        </td>
                        <td>
                            @if (translation.Portugais.StartsWith("[PT]"))
                            {
                                <span class="text-warning" title="Traduction générée automatiquement">@translation.Portugais</span>
                            }
                            else
                            {
                                @translation.Portugais
                            }
                        </td>
                        <td><span class="badge bg-secondary">@translation.Fichier</span></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">
                        @if (Model.HasSearched)
                        {
                            <div>
                                <p>Aucune traduction trouvée avec ces critères.</p>
                                <a href="/translations/create?code=@(Model.Filter.Code.Value)&francais=@(Model.Filter.Francais.Value)" class="btn btn-success btn-sm">
                                    <i class="fas fa-plus"></i> Créer cette traduction
                                </a>
                            </div>
                        }
                        else
                        {
                            <p>Utilisez les filtres ci-dessus pour rechercher des traductions.</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        // Auto-submit sur changement des filtres avec un délai
        /*let searchTimeout;
        document.querySelectorAll('input[type="text"]').forEach(input => {
            input.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    this.form.submit();
                }, 800);
            });
        });*/

        // Auto-submit quand on change les options de recherche
        document.querySelectorAll('select, input[type="checkbox"]').forEach(element => {
            element.addEventListener('change', function() {
                this.form.submit();
            });
        });
    </script>
}